{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["DOM", "ES2020"],
    "module": "ESNext",
    "jsx": "react-jsx",
    "noEmit": true,
    "strict": true,
    "skipLibCheck": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "moduleResolution": "bundler",
    "useDefineForClassFields": true,
    "allowImportingTsExtensions": true,
    "types": ["@yogurt-ui/react"]
  },
  "include": ["docs", "theme", "rspress.config.ts", "global.d.ts", "src"],
  "mdx": {
    "checkMdx": false
  }
}
